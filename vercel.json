{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*\\.(css|js|html|png|jpg|jpeg|gif|svg))$",
      "dest": "frontend/$1"
    },
    {
      "src": "/(login|signup|addExpense|forgot-password)",
      "dest": "frontend/$1.html"
    },
    {
      "src": "/",
      "dest": "frontend/login.html"
    }
  ]
}